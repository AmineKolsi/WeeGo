{% trans_default_domain 'FOSUserBundle' %}

<script type="text/javascript" src="{{ asset('bundles/weego/js/jquery.min.js') }}"></script>

<script type="text/javascript" src="{{ asset('bundles/weego/js/jquery.migrate.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#pays').change(function() {
            var flag_url = '/BestTrip/web/bundles/weego/images/Flags/' + this.value + '.png';
            $('#drapeau').attr('src', flag_url);
        });

    });
</script>

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register formulaire ">


    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {{ form_label(form.username, "Nom*:  ") }}
                {{ form_widget(form.username) }}
            </div>
            <div class="col-md-2">
                {{ form_errors(form.username) }}
            </div>    
            <div class="col-md-4">
                 {{ form_label(form.prenom, "Prenom*:  ") }}
                  {{ form_widget(form.prenom) }}
            </div>
            <div class="col-md-2">
                {{ form_errors(form.prenom) }}
            </div>

        </div>





        <div class="row">
            <div class="col-md-4">
                {{ form_label(form.pseudo, "Pseudo*:  ") }}
    {{ form_widget(form.pseudo) }} 
            </div>
            <div class="col-md-2">
{{ form_errors(form.pseudo) }}            </div> 
            <div class="col-md-4">
                {{ form_label(form.email, "Email*: ") }}
    {{ form_widget(form.email) }}
            </div>
            <div class="col-md-2">
{{ form_errors(form.email)}}          
            </div> 

        </div>


        <div class="row">
            <div class="col-md-4">
                {{ form_label(form.plainPassword.first, "Mot de passe*: ") }} 
    {{ form_widget(form.plainPassword.first) }}
            </div>
            <div class="col-md-2">
{{ form_errors(form.plainPassword.first)}}          </div>    

        

       
            <div class="col-md-4">
                {{ form_label(form.plainPassword.second, "Confirmer Mot de passe*: ") }}
    {{ form_widget(form.plainPassword.second) }} </br>
    {{ form_row(form._token) }}
            </div>
            <div class="col-md-2">
    {{ form_errors(form.plainPassword.second) }}       </div>    

        </div>

        <div class="row" >
            <div class="col-md-4" style=" width: 33%;">
                {{ form_label(form.date_naissance, "Date de naissance*:  ") }}
    {{ form_widget(form.date_naissance) }}
            </div>
            <div class="col-md-2">
{{ form_errors(form.date_naissance) }}     </div>
            <div class="col-md-4" style=" width: 33%;">
                {{ form_label(form.pays, "Pays*: ") }} </label>
    {{ form_widget(form.pays) }} </br>
            </div>
            <div class="col-md-2">
{{ form_errors(form.pays) }}    </div> 

        </div>
        
        
        <div class="row" style="display: none;">
            <div class="col-md-6">
                {{ form_label(form.date_inscrit, "Date d'inscription(*  ") }}
    {{ form_widget(form.date_inscrit) }}
            </div>
            <div class="col-md-4">
{{ form_errors(form.date_inscrit) }}     </div>    

        </div>
   
        <div class="row" style="display: none;" >
            <div class="col-md-6" >
                {{ form_label(form.roles, "Rloes:  ") }}
    {{ form_widget(form.roles) }}
            </div>
            <div class="col-md-4">
{{ form_errors(form.roles) }}     </div>    

        </div>

        
        <div class="row" >
            <div class="col-md-6">
                {{ form_label(form.file, "Image(*):  ") }}
    {{ form_widget(form.file) }}
            </div>
            <div class="col-md-4">
{{ form_errors(form.file) }}     </div>    

        </div>  
        <div class="row" >
            <div class="col-md-5">  
                <p>(*) : Champs obligatoires.</p>

            </div>
        
        
            <div class="col-md-4">    
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle' )}}" />

                <input name="Button_Back" type="reset" id="Button_Back" class="cr_button-book" onclick="window.history.back();" value="Annuler"/>
            </div>     


        </div>
</form>
