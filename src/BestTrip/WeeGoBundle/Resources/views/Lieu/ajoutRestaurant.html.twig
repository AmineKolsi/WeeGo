{% block main_content  %}



   	<form method="POST" class="formulaire" {{ form_enctype(form) }}>  	 

        
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.nom)}}               
                        {{ form_widget (form.nom) }}	
                    </div>
                    <div class="col-md-6">
                        {{form_label(form.siteweb)}}      
                        {{ form_widget (form.siteweb) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.adresse)}}  
                        {{ form_widget (form.adresse) }} 
                    </div>
                    <div class="col-md-6">
                          {{form_label(form.jRepos)}}                      
                                                {{ form_widget (form.jRepos, {'attr': {'placeholder': 'Jours Repos'}}) }} 	
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                             {{form_label(form.specialite)}}	     
                                                {{ form_widget (form.specialite, {'attr': {'placeholder': 'Specialit√©:'}}) }} 
                    </div>
                    <div class="col-md-6">
                       {{form_label(form.reservation)}}     
                                                {{ form_widget (form.reservation, {'attr': {'placeholder': 'Reservation'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{form_label(form.numtel)}}                  
                        {{ form_widget (form.numtel) }}
                    </div>
                    <div class="col-md-6">
                    {{form_label(form.file)}}
                        {{ form_widget (form.file) }}
                    </div>
                </div>
                            <div class="row">
                     <div class="col-md-6">
                            <label> Pays:</label>
                          <select class="nompays">
         <option>---Pays---</option>
        {% for l in pays %}
        <option>{{l.nomPays}}</option>
     {% endfor %}
       
    </select>
                     </div>
                     <div class="col-md-6">
                         <label> Ville:</label>
                       <select class="ville" id="ville" name="ville" >
              <option>----Ville---</option>
    </select>
                     </div>
                    <input type="submit" value="Ajouter">
                </div>
            </div>
            

        
